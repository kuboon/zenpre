{
  "tasks": {
    "lume": {
      "description": "Run Lume command",
      "command": "deno run --env -P=lume lume/cli.ts"
    },
    "build": {
      "description": "Build the site for production",
      "command": "deno task lume"
    },
    "serve": {
      "description": "Run and serve the site for development",
      "command": "deno task lume -s"
    },
    "server": {
      "description": "Run the Hono.js server",
      "command": "deno run --allow-net --allow-env --unsafely-ignore-certificate-errors server/main.ts"
    },
    "server:client": {
      "description": "Run the RPC client example",
      "command": "deno run --allow-net --unsafely-ignore-certificate-errors server/client.ts"
    },
    "server:test": {
      "description": "Run server tests (requires server to be running)",
      "command": "deno run --allow-net --unsafely-ignore-certificate-errors server/test.ts"
    }
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "lume"
  },
  "imports": {
    "lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.1/",
    "lume/cms/": "https://cdn.jsdelivr.net/gh/lumeland/cms@0.13.0/",
    "lume/jsx-runtime": "https://cdn.jsdelivr.net/gh/oscarotero/ssx@0.1.12/jsx-runtime.ts"
  },
  "unstable": [
    "temporal",
    "fmt-component",
    "kv"
  ],
  "lint": {
    "plugins": [
      "https://cdn.jsdelivr.net/gh/lumeland/lume@3.1.1/lint.ts"
    ],
    "rules": {
      "exclude": [
        "no-import-prefix"
      ]
    }
  },
  "permissions": {
    "lume": {
      "read": true,
      "write": [
        "./"
      ],
      "import": [
        "cdn.jsdelivr.net:443",
        "jsr.io:443",
        "deno.land:443",
        "esm.sh:443"
      ],
      "net": [
        "0.0.0.0",
        "jsr.io:443",
        "cdn.jsdelivr.net:443",
        "data.jsdelivr.com:443",
        "registry.npmjs.org:443"
      ],
      "env": true,
      "run": true,
      "ffi": true,
      "sys": true
    }
  },
  "lock": false
}
